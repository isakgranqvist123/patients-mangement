{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["types.d.ts"]
  },
  "include": ["src/**/*", "types.d.ts"],
  "exclude": ["node_modules"]
}
